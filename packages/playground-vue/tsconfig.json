{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    /* Linting */
    "noImplicitThis": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@are-visual/virtual-table-vue": ["../virtual-table-vue/src/index.ts"],
      "@are-visual/virtual-table-vue/*": ["../virtual-table-vue/src/*"]
    }
  },
  "include": ["./env.d.ts", "src/**/*", "src/**/*.vue", "./vite.config.ts"],
}
