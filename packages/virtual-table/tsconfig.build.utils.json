{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/virtual-table/middleware/utils",
    "declaration": true,
    "declarationDir": "../../dist/virtual-table/middleware/utils",
    "sourceMap": true,

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@are-visual/virtual-table": ["./src/index.ts"],
      "@are-visual/virtual-table/*": ["./src/*"],
    }
  },
  "include": [
    "src/middleware/utils/**/*",
    "../global.d.ts"
  ]
}